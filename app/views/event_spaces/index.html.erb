<p id="notice"><%= notice %></p>

<h1>Event Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_spaces.each do |event_space| %>
      <tr>
        <td><%= event_space.name %></td>
        <td><%= event_space.capacity %></td>
        <td><%= link_to 'Show', event_space %></td>
        <td><%= link_to 'Edit', edit_event_space_path(event_space) %></td>
        <td><%= link_to 'Destroy', event_space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Space', new_event_space_path %>
